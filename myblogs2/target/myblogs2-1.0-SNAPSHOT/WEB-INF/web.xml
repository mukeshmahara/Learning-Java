    </servlet>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <!--    Servlet mappping for profile.jsp-->
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <!--    servlet mapping for register_page.jsp-->

    <servlet>
        <servlet-name>register_page</servlet-name>
        <jsp-file>/register_page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register_page</servlet-name>
        <url-pattern>/register_page</url-pattern>
    </servlet-mapping>
    <!--    Servlet mapping for login_page.jsp-->
    <servlet>
        <servlet-name>login_page</servlet-name>
        <jsp-file>/login_page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
