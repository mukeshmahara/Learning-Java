    </servlet>

    <servlet-mapping>
        <servlet-name>CreatePost</servlet-name>
        <url-pattern>/CreatePost</url-pattern>
    </servlet-mapping>

    <!--    servlet mapping for index.jsp-->
    <servlet>
        <servlet-name>index</servlet-name>
