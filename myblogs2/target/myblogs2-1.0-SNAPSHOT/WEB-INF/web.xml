    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <!--    Servlet mapping for post.jsp-->
    <servlet>
        <servlet-name>post</servlet-name>
