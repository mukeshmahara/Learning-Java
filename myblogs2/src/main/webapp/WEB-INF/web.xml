<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


<!--    servlet declearation and mapping for registration -->

    <servlet>
        <servlet-name>
            Register
        </servlet-name>
        <servlet-class>
            com.mukeshmahara.myblogs2.servlets.Register
        </servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>



<!--    Servlet declearation and mapping for login servlet-->

    <servlet>
        <servlet-name>
            Login
        </servlet-name>
        <servlet-class>
            com.mukeshmahara.myblogs2.servlets.Login
        </servlet-class>

    </servlet>

    <servlet-mapping>
        <servlet-name>
            Login
        </servlet-name>
        <url-pattern>
            /Login
        </url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.mukeshmahara.myblogs2.servlets.Logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>com.mukeshmahara.myblogs2.servlets.Edit_User_Info</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/Edit_User_Info</url-pattern>
    </servlet-mapping>

<!--    Create post Servlet-->
    <servlet>
        <servlet-name>CreatePost</servlet-name>
